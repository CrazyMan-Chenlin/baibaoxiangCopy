<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
		http://www.springframework.org/schema/beans/spring-beans-4.0.xsd

		http://www.springframework.org/schema/context
		http://www.springframework.org/schema/context/spring-context-4.0.xsd ">

    <!-- 包扫描器 -->
    <context:component-scan base-package="com.baibaoxiang.serviceImpl"/>
    <bean id="articleService" class="com.baibaoxiang.serviceImpl.ArticleServiceImpl"/>
    <bean id="managerService" class="com.baibaoxiang.serviceImpl.ManagerServiceImpl"/>
    <bean id="articleTypeService" class="com.baibaoxiang.serviceImpl.ArticleTypeServiceImpl"/>
    <bean id="dayTotalService" class="com.baibaoxiang.serviceImpl.DayTotalServiceImpl"/>
    <bean id="schoolService" class="com.baibaoxiang.serviceImpl.SchoolServiceImpl"/>
    <bean id="jedisClient" class="com.baibaoxiang.jedis.JedisClientPool"/>
</beans>